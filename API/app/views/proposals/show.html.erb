<p>
  <strong>Titulo:</strong>
  <%= @proposal.titulo %>
</p>

<p>
  <strong>Texto:</strong>
  <%= @proposal.texto %>
</p>

<p>
  <strong>User:</strong>
  <%= @proposal.user.email %>
</p>

<p>
  <strong>Likes:</strong>
  <%= @proposal.upvotes %>
</p>

<p>
  <strong>Dislikes:</strong>
  <%= @proposal.downvotes %>
</p>

<h3>Comments</h3>
<table>
  <thead>
    <tr>
      <th>Texto</th>
      <th>Approved</th>
      <th>User</th>
      <th>Likes</th>
      <th>Dislikes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proposal.comments.each do |comment| %>
      <tr>
        <td><%= comment.texto %></td>
        <td><%= comment.approved %></td>
        <td><%= comment.user.email %></td>
        <td><%= comment.upvotes %></td>
        <td><%= comment.downvotes %></td>
        <td><%= link_to 'Show', [comment.proposal, comment] %></td>
        <td><%= link_to 'Edit', edit_proposal_comment_path(comment.proposal, comment) %></td>
        <td><%= link_to 'Destroy', [comment.proposal, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Likes', proposal_proplikes_path(@proposal) %>
<%= link_to 'Comments', proposal_comments_path(@proposal) %>
<%= link_to 'Edit', edit_proposal_path(@proposal) %> |
<%= link_to 'Back', proposals_path %>
