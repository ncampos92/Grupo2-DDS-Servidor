
<h1>Listing Likes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @likes.each do |like| %>
      <tr>
        <td><%= like.user.id %></td>
        <td><%= like.score %></td>
        <td><%= link_to 'Show', [@proposal, like.comment, like] %></td>
        <td><%= link_to 'Edit', edit_proposal_comment_like_path(@proposal, like.comment, like) %></td>
        <td><%= link_to 'Destroy', [@proposal, like.comment, like], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Like', new_proposal_comment_like_path(@proposal, @comment) %>
